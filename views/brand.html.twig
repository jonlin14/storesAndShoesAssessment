<html>
    <head>
        <link rel="stylesheet" href="normalize.css" media="all">
        <link rel="stylesheet" href="skeleton.css" media="all">
        <title>Brand</title>
    </head>
    <body>
        <div class = "container">
        <h3> {{ brand.getBrandName() }}</h3>
        <h3><a href="/">Home ></a><a href="/brands">Brands</a></h3>

        {% if stores is not empty %}
        <p>These are the stores that sell this brand</p>
        <ul>
            {% for element in stores %}
            <li>
                {{ element.getName() }}
            </li>>
            {% endfor %}
        </ul>
        {% else %}
        <p> No stores sell this brand! </p>
        {% endif %}
        <form action = "addStores" method = "post">
            <input id = "brand_id" name = "brand_id" type = "hidden" value = "{{ brand.getId() }}" >
            <label for ="store_id">Select a store </label>
            <select id = "store_id" name = "store_id" type = "text">
                {% for element in all_stores %}
                    <option value = "{{ element.getId() }}"> {{ element.getName() }} </option>
                {% endfor %}
            </select>
            <button type = "submit">Add a store</button>
        </form>

        <form action = "/brand/{{ brand.getId() }}" method = "post">
            <input name = "_method" type = "hidden" value = "delete">
            <button type = "submit">Delete</button>
        </form>
        </div>
    </body>
</html>
