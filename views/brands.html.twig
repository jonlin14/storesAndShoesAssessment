<html>
    <head>
        <title>Brands.html.twig</title>
    </head>
    <body>
        <h5> <a href="/">Home</a></h5>

            {% if brands is not empty %}
                {% for element in brands %}
                <p>
                    <a href="/brand/{{ element.getId() }}">{{ element.getBrandName() }}</a>
                </p>
                {% endfor %}
            {% endif %}

            <form action = "/brands" method = "post">
                <label for = "brand_name"> Enter a brand Name </label>
                <input id = "brand_name" name = "brand_name" type = "text">
                <button type = "submit">Make a new brand</button>
            </form>

            <form action = "/brandsDeleteall" method = "post">
                <button type = "submit">Delete All</button>
        </p>
    </body>
</html>
