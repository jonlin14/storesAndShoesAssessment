<html>
    <head>
        <title>Brands.html.twig</title>
    </head>
    <body>
        <h5> <a href="/">Home</a></h5>

            {% if brands is not empty %}
                {% for element in brands %}
                <p>
                    {{ element.getBrandName() }}
                </p>
                {% endfor %}
            {% endif %}

            <form action = "/brands" method = "post">
                <label for = "brand_name"> Enter a brand Name </label>
                <input id = "brand_name" name = "brand_name" type = "text">
            </form>
        </p>
    </body>
</html>
