<html>
    <head>
        <link rel="stylesheet" href="normalize.css" media="all">
        <link rel="stylesheet" href="skeleton.css" media="all">
        <title>Stores</title>
    </head>
    <body>
        <div class = "container">
            <h5><a href="/">Home</a></h5>

            {% if stores is not empty %}
            <ul>
                {% for element in stores %}
                <li>
                    <a href="stores/{{ element.getId() }}"> {{ element.getName() }}</a>
                </li>
                {% endfor %}
            </ul>
            {% else %}
            <p>There are no stores listed</p>
            {% endif %}

            <form action = "/stores" method = "post">
                <label for = "new_store">Input a new store </label>
                <input id = "new_store" name = "new_store" type = "text">
                <button type = "submit">New Store</button>
            </form>

            <form action = "/stores/delete" method = "post">
                <button type = "submit">Delete All</button>
            </form>
        </div>
    </body>
</html>
